<!-- HEADER -->
<div id="header">
  <div id="header-topSection">
    <!-- Logo -->
    <img src="Images/lu-logo-white.png" alt="LU Logo White" id="lu-logo">
    <!-- Heading -->
    <h2 id="main-heading">Departmental Timetabling Utility</h2>
    <!-- Accessibility -->
    <div id="accessibility-options">
      <span id="user-details" style='font-size:1.2em;'>Department&nbsp;&nbsp;   
        <span id="username" style='font-weight:700;margin-right:10px;'>	
          @Session["dept-code"]
        </span>
      </span>
      <span>&nbsp;&nbsp;&nbsp;&nbsp;<i id="user-notifications" class="fa fa-bell fa-2x accessibility-option"></i><span id='user-notification-alert'><i class="fa fa-exclamation fa-lg"></i></span></span>
      <span style="margin-left:10px;">&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-pencil-square-o fa-2x accessibility-option" id="notebookButton" aria-hidden="true"></i></span>
      <span>&nbsp;&nbsp;&nbsp;&nbsp;<i id="toggleColor" class="fa fa-eye fa-2x accessibility-option"></i></span>
      <span>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-search-plus fa-2x accessibility-option" id="fontChange"></i></span>
      <span>&nbsp;&nbsp;&nbsp;&nbsp;<a href="logout.cshtml" class="accessibility-option" id="logoutButton"><i class="fa fa-sign-out fa-2x"></i></a></span>
    </div>
  </div>
  <div id="header-navigation">
    @{ var pgName = @Page[0]; }
    <ul>
      <li>
        <a href="booking.cshtml">
          @if (pgName == "booking") {
            <span class='nav-element-active'>Room Booking Requests</span>
          } 
          else {
            @Html.Raw("Room Booking Requests");
          } 
        </a>
      </li>
      <li>
        <a href="allocations.cshtml">
          @if (pgName == "allocations") {
            <span class='nav-element-active'>Submissions</span>
          } 
          else {
            @Html.Raw("Submissions");
          } 
        </a>
      </li>
      <li>
        <a href="roominfo.cshtml">
          @if (pgName == "roominfo") {
            <span class='nav-element-active'>Room Information</span>
          } 
          else {
            @Html.Raw("Room Information");
          } 
        </a>
      </li>
      <li>
        <a href="moduleinfo.cshtml">
          @if (pgName == "moduleinfo") {
            <span class='nav-element-active'>Timetables</span>
          } 
          else {
            @Html.Raw("Timetables");
          } 
        </a>
      </li>
      <li>
        <a href="modulemanager.cshtml">
          @if (pgName == "modulemanager") {
            <span class='nav-element-active'>Module Management</span>
          } 
          else {
            @Html.Raw("Module Management");
          } 
        </a>
      </li>
    </ul>
  </div>

  <div class='user-notification-dropdown card-container'><i class="fa fa-bell"></i>&nbsp;&nbsp;Notifications
    <span id='read-icon' style='margin-left:95px;'>Clear <i class="fa fa-check"></i></span>
    <br/>
    <br/>
    <div id='notification-container'></div>
    <br/>
  </div>

  <div class="notepad-section">
    <span class="notepad-title">My Notepad</span><br/>
    <span class="notepad-desc">Use me to save information, notes and reminders. I am handy as a planner or To-Do list!</span>
    <textarea id="notepad-content"></textarea><!--class="notepad-content" cols="30"-->
    <div class="notepad-button notepad-saved" id="notepad-save"><span>Saved</span></div><i class="fa fa-check fa-2x" id="notepad-save-icon" aria-hidden="true"></i>
    <div id="notepad-clear"><i class="fa fa-eraser" aria-hidden="true" id="notepad-clear-icon"></i>Clear</div>
    <div id="notepad-close">Close<i class="fa fa-arrow-right" aria-hidden="true" id="notepad-close-icon"></i></div>
  </div>
</div>
<img src="Images/lboro-coatofarms.png" style="transform: scale(1.5); z-index: 10; opacity: 0.045; position: absolute; top: 200px;">

<div id="language-icon"><i id="language-sel" class="fa fa-language fa-2x" aria-hidden="true"></i></div>
<div id="google_translate_element"></div><script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
}
</script><script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        